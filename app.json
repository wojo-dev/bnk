{
  "expo": {
    "name": "bnk",
    "slug": "bnk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bnk",
    "userInterfaceStyle": "automatic",
    "ios": {
      "bundleIdentifier": "com.wes.biometricauth",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to securely log you into your account."
      },
      "icon": "./assets/expo.icon"
    },
    "android": {
      "package": "com.wes.bnk",
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow bnk to use Face ID."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow bnk to access your contacts."
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#208AEF",
          "android": {
            "image": "./assets/images/splash-icon.png",
            "imageWidth": 76
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
